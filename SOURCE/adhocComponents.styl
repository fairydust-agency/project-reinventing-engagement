      line-height       2em
      font-size         1.5em
      color             configuration_white
    .Pitchbox__story2
      display           inline-block
      text-align        left
      vertical-align    top
      width             49%
      font-size         1.17em
      color             configuration_white
      text-align        top
      line-height       1.5em
      margin-bottom     5em
    .Pitchbox__story3
      display           inline-block
      text-align        left
      vertical-align    top
      color             configuration_white
      text-align        top
      width             49%
      font-size         1.17em
      line-height       1.5em
      margin-bottom     5em


