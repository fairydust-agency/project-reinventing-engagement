.Componentgrid
  position            relative
  display             block
  font-size           2em


/*-----------------------------------------------------------------------------
  CARD
-----------------------------------------------------------------------------*/
.Card
  position relative

_background1           = rgba(0,0,0,0.75)//configuration_black
_background2           = configuration_purple
.Componentgrid--VARIANT\\=Grid .Card
  width                 33.56%
  margin-left           -0.14em
  margin-right          -0.14em
  padding-bottom        29%
  display               inline-block
.Componentgrid--VARIANT\\=Grid .Card:nth-child(even)
  background-color      _background1
.Componentgrid--VARIANT\\=Grid .Card:nth-child(odd)
  background-color      _background2

_background1           = configuration_green
_background2           = configuration_black
_font_black            = configuration_black
_font_white            = configuration_white
_font_orange           = configuration_orange
_font_green            = configuration_green
.Title
  font-size           2em
  width               80%
  margin-left         auto
  margin-right        auto
  color               _font_green
  font-weight         bold
  background-color    _background2
  text-align          center
  padding             1em
.Componentgrid--VARIANT\\=List
  padding-bottom      2em
  font-size           1em
.Componentgrid--VARIANT\\=List .Card
  display             block
  margin-left         auto
  margin-right        auto
  width               30em
  padding             0.8em
  text-align          center
.Componentgrid--VARIANT\\=List .Card:nth-child(even)
  background-color _background2
  opacity 0.9
  width 80%
  text-align center
  font-size 0.8em
  font-weight bold
  color _font_white
  padding-top 1.2em
  padding-bottom 1.2em
  &:hover
    opacity 0.98
  a
    color _font_white
    text-decoration none
.Componentgrid--VARIANT\\=List .Card:nth-child(odd)
  background-color _background2
  opacity 0.98
  width 80%
  text-align center
  font-size 0.8em
  font-weight bold
  color _font_green
  padding-top 1.2em
  padding-bottom 1.2em
  a
    color _font_green
    text-decoration none

/*-----------------------------------------------------------------------------
  PROFILE
-----------------------------------------------------------------------------*/
.avatar
  width: 9em;
  height: 9em;
  margin: 0.5em auto 0.5em auto;
  border-radius: 50%;
  background:
    linear-gradient(45deg, rgba(255, 255, 255, 0) 50%,
    rgba(255, 255, 255, 0.2) 50%);
  background-size: 150%;
  cursor: pointer;
  overflow: hidden;
  img
    width 100%

.avatar:hover
  box-shadow      none
  border-radius   0
  transition: all 3s ease-out;

.Card--VARIANT\\=Userprofile a
  text-decoration none
  display         block
  position        absolute
  top             0
  width           15em
  left            0
  .avatar
    position      relative
    left          -0.6em
  .name
    font-size     1em
    color         configuration_orange
    font-weight   900
  .name, .description
    position      relative
    left          -0.6em
    display       inline-block
    text-align    center
    width         100%
  .description
    font-size     0.5em
    color         configuration_white
    font-weight   900

.empty
  font-size     2em
  color         configuration_orange
  font-weight   900
  margin-top    2.5em
  display       inline-block
  text-align    center
  width         100%

