configuration_orange  = #FEA304
configuration_black   = #010D0B
configuration_purple  = #4B0B6C
configuration_green   = #9EB277
configuration_white   = #F8F3EE


/*-----------------------------------------------------------------------------
  NAVIGATION
-----------------------------------------------------------------------------*/
_text       = configuration_black
_background = configuration_purple
.Navigation
  z-index             100 // layer 1
  background-color    _background
  font-size           1.775em
  font-weight         900
  letter-spacing      0.2em
  text-align          center
  padding-top         0.6em
  padding-bottom      0.65em
  a
    background-color  _text
    color             _background
    text-transform    uppercase
    text-decoration   none
    padding-left      0.25em
    padding-right     0.25em
    padding-top       0.2em
    padding-bottom    0.25em


/*-----------------------------------------------------------------------------
  PITCHBOX
-----------------------------------------------------------------------------*/
_background = rgba(0,0,0,.75)//configuration_black
_text       = configuration_white
.Pitchbox
  position            relative
  height              87em
  vertical-align      bottom
  img
    z-index           -1 // layer 0
    width             100%
    position          fixed
    top               0
  .Pitchbox__title,
  .Pitchbox__moment,
  .Pitchbox__location
    position          absolute
    background-color  _background
    color             _text
    font-weight       900
    padding           .5em
  .Pitchbox__title
    font-size         3.25em
    top               0.8em
    left              7.39em
  .Pitchbox__moment
    text-transform    uppercase
    font-size         1.5em
    letter-spacing    0.33em
    top               6.5em
    left              16em
  .Pitchbox__location
    font-size         1.5em
    top               12em
    left              43em
  .Pitchbox__description
    position          absolute
    bottom            0
    width             100%
    background-color  _background
    color             _text
    line-height       1.2em
    font-weight       900
    .Pitchbox__story1,
    .Pitchbox__story2,
    .Pitchbox__story3
      padding           4em
      padding-left      19em
      padding-right     19em
    .Pitchbox__story1
      font-size         1.4em
    .Pitchbox__story2
      background-color  configuration_green
    .Pitchbox__story3
      background-color  configuration_purple

/*-----------------------------------------------------------------------------
  BUTTON
-----------------------------------------------------------------------------*/
_background           = rgba(0,0,0,.75)//configuration_black
.Button--VARIANT\\=Buy
  display             block
  background-color    _background
  padding             4em
  margin-top          4em
  margin-bottom       4em
  form, input
    display           block
    margin            0 auto


/*-----------------------------------------------------------------------------
  COMPONENTGRID
-----------------------------------------------------------------------------*/
.Componentgrid
  position            relative
  display             block
  font-size           2em


/*-----------------------------------------------------------------------------
  CARD
-----------------------------------------------------------------------------*/
_background1           = configuration_orange
_background2           = configuration_purple
.Componentgrid--VARIANT\\=Grid .Card
  display             inline-block
  width               32.8%
  height              10em
  text-align          center
.Componentgrid--VARIANT\\=Grid .Card:nth-child(even)
  background-color red

.Componentgrid--VARIANT\\=List .Card
  display             block
  margin-left         auto
  margin-right        auto
  width               30em
  padding             0.8em
  margin-top          0.4em
  margin-bottom       0.4em
  text-align          center
.Componentgrid--VARIANT\\=List .Card:nth-child(even)
  background-color _background1
.Componentgrid--VARIANT\\=List .Card:nth-child(odd)
  background-color _background2


/*-----------------------------------------------------------------------------
  VENUE
-----------------------------------------------------------------------------*/
.Venue
  z-index             100       // layer 1
  position            relative  // ANCHOR POSITION
  background-color    none
  width               100%
  overflow            hidden
  font-size           20px      // ANCHOR SIZE
  vertical-align      top
  .Venue__map
    z-index           200     // layer 2
    display           block
    margin            0 auto
    height            30em
    width             100%
  .Venue__link
    z-index           300     // layer 3
    position          absolute
    top               0
    left              0
    display           block
    width             100%
    height            30em
    text-decoration   none
  .Venu__description
    z-index           400     // layer 4
    position          absolute
    top               3em
    left              3em
    display           block
    font-size         2em
    font-weight       900
    text-decoration   none
    padding           0.1em
    span
      display         inline-block
      background      rgb(0, 0, 0) /* The Fallback */
      background      rgba(0, 0, 0, 0.75)
      color           configuration_white
      padding-left    15px
      padding-right   15px
      padding-top     7px
      padding-bottom  3px


/*-----------------------------------------------------------------------------
  SUBSCRIBE
-----------------------------------------------------------------------------*/
_background = configuration_green
_text = configuration_purple
.Subscribe
  z-index             100       // layer 1
  position            relative  // ANCHOR POSITION
  width               100%
  padding             3em
  overflow            hidden
  font-size           30px     // ANCHOR SIZE
  vertical-align      top
  background-color    _background   // @TODO: use variable
.Subscribe__box
  z-index             100     // layer 1
  display             block
  width               31em
  height              14em
  margin              0 auto
  padding-left        0.5em
  // background-color  yellow  // @TODO: DUMMY
  &::before
    content           "["
    display           inline-block
    color             _text      // @TODO: variable
    font-size         12em
    font-weight       900
  &::after
    content           "]"
    display           inline-block
    color             _text      // @TODO: variable
    font-size         12em
    font-weight       900
.Subscribe__content
  position            relative
  display             inline-block
  width               20em
  bottom              1.3em
  padding-left        0.38em
.Subscribe__description
  font-size           2em
  font-weight         900
  letter-spacing      0.02em
  color               _text       // @TODO: variable
  padding-left        1.4em
.Subscribe__input-email
  display             inline-block
  border              0.1em solid _text
  color               _text      // @TODO: variable
  background-color    _background    // @TODO: variable
  width               12em
  height              2em
  font-size           1em
  margin-top          0.4em
  padding-left        0.4em
  &::-webkit-input-placeholder /* WebKit browsers */
    color             configuration_white
  &:-moz-placeholder /* Mozilla Firefox 4 to 18 */
    color             configuration_white
    opacity           1
  &::-moz-placeholder /* Mozilla Firefox 19+ */
     color            configuration_white
     opacity          1
  &:-ms-input-placeholder /* Internet Explorer 10+ */
     color            configuration_white

.Subscribe__action-submit
  display             inline-block
  border              none
  color               _background      // @TODO: variable
  background-color    _text      // @TODO: variable
  width               7em
  height              2em
  font-size           1em
  margin-top          0.4em
/*-----------------------------------------------------------------------------
  ABOUT
-----------------------------------------------------------------------------*/
_background = rgba(0,0,0,0.75)
_font_white = configuration_white
_font_purple = configuration_purple
.About
  font-size           3em    // ANCHOR SIZE
  .About__description
    margin 7em 0em 0em 0em
    padding 1em 0em .6em 0em
    background-color _background
    color _font_white
    letter-spacing 0.02em
    .About__description__name
      color _font_white
      padding-bottom .4em
      font-size 0.8em
      text-align center
      font-weight bold
    .About__description__address
      font-size .7em
      text-align center
      font-weight bold
    .About__description__allRightsReserved
      text-align center
      font-size 0.4em
      padding-bottom .2em
    .About__description__websiteDesign
      font-size 0.4em
      text-align center
  .About__links {
    width: 100%;
    height: 3em
    display: table;
    margin: 0;
  }
  .About__links a {
    display: table-cell;
    color: white;
    width: 14.2%;
    text-align: center;
    font-size: 2em;
    padding: .5em;
  }
  @media (max-width: 768px) {
    .About__links a {
      font-size: 1.5em;
    }
  }

  /*
