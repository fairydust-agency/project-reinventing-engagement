  fontcolorA1        = configuration_orange,
  fontcolorA2        = configuration_orange,
  fontcolorB1        = configuration_orange,
  fontcolorB2        = configuration_orange,
  component_width   = 33.56%,
  component_bottom  = 29%,
  component_size    = 1em,
