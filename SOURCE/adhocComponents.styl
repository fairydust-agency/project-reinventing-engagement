  .Card:nth-child(4n+4)
    background-color      bgcolorA2
    .name
      color               fontcolorA2
  .Card:nth-child(4n+1)
    background-color      bgcolorB1
    .name
      color               fontcolorB1
  .Card:nth-child(4n+2)
    background-color      bgcolorB2
    .name
      color               fontcolorB2

