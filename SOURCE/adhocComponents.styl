/*-----------------------------------------------------------------------------
  NAVIGATION
-----------------------------------------------------------------------------*/
_text       = configuration_white
_background = configuration_purple
.Navigation
  z-index             100 // layer 1
  background-color    _background
  font-size           2em
  font-weight         900
  text-align          center
  padding-top         0.5em
  padding-bottom      0.5em
  a
    color             _text
    text-transform    uppercase
    text-decoration   none
    padding-left      0.6em
    padding-right     0.6em
    &:hover
      color           _background
      background-color _text


/*-----------------------------------------------------------------------------
  PITCHBOX
-----------------------------------------------------------------------------*/
_background = rgba(0,0,0,.85)//configuration_black
_text       = configuration_white
Pitchbox(
  position_location = 0,
  top_location      = 0,
  margin_location   = 0,
  position_title1   = 0,
  top_title1        = 0,
  width_title1      = 44.5em,
  size_title3       = 1.1em,
  top_title3        = 3em,
  width_location    = auto,
  size_location     = 1.5em,
  logo_position     = left,
  align_story2      = left,
  align_story3      = left,
  size_story1       = 1.5em,
  size_story2       = 1.17em,
  size_story3       = 1.17em,
  width_story3      = 49%,
  width_story2      = 49%,
  background_story2 = rgba(0,0,0,0)
)
  position            relative
  vertical-align      bottom
  .Pitchbox__poster
    z-index           -1 // layer 0
    width             100%
    position          fixed
    top               0
  .Pitchbox__adress
    margin-left       margin_location
    padding-left      0.6em
    padding-bottom    1em
    font-size         0.72em
    letter-spacing    0.1em
    line-height       1.2em
    font-weight       100
  .Pitchbox__title1,
  .Pitchbox__location
    position          absolute
    background-color  _background
    color             _text
    font-weight       900
    padding           1.5em
  .Pitchbox__title1
    top               top_title1
    left              position_title1
    width             width_title1
    text-align        center
  .Pitchbox__title1a
    font-size         3.155em
  .Pitchbox__title2
    padding-top       0.2em
    padding-left      0.35em
    font-size         2.155em
    font-weight       100
    letter-spacing    0.17em
    text-align        center
  .Pitchbox__moment
    text-transform    uppercase
    padding-top       0.5em
    padding-left      0.5em
    font-size         1.5em
    font-weight       100
    letter-spacing    0.08em
  .Pitchbox__location
    font-size         size_location
    width             width_location
    top               top_location
    right             position_location
    padding           0.8em
    padding-top       1.3em
    padding-bottom    1.3em
    .Pitchbox__logo
      text-align      logo_position
    img
      width           9.6em
  .Pitchbox__description
    position          absolute
    top               38em
    width             100%
    background-color  _background
    color             _text
    line-height       1.2em
    font-weight       900
    .Pitchbox__story1,
    .Pitchbox__story2,
    .Pitchbox__story3
      padding           2em
      padding-left      4em
      font-size         size_story3
      text-align        align_story3
    .Pitchbox__story1
      background-color  configuration_purple
      text-align        center
      text-transform    uppercase
      line-height       2em
      font-size         size_story1
      color             configuration_white
    .Pitchbox__story2
      display           inline-block
      text-align        align_story2
      font-size         size_story2
      vertical-align    top
      width             width_story2
      font-size         size_story2
      color             configuration_white
      background-color  background_story2
      text-align        top
      line-height       1.5em
      text-align        left
    .Pitchbox__story3
      display           inline-block
      text-align        left
      vertical-align    top
      color             configuration_white
      text-align        top
      width             width_story3
      font-size         size_story3
      line-height       1.5em
      text-align        left

