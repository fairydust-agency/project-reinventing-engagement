/*-----------------------------------------------------------------------------
  VENUE
-----------------------------------------------------------------------------*/
.Venue
  z-index             100       // layer 1
  position            relative  // ANCHOR POSITION
  background-color    none
  width               100%
  overflow            hidden
  font-size           20px      // ANCHOR SIZE
  vertical-align      top
  .Venue__map
    z-index           200     // layer 2
    display           block
    margin            0 auto
    height            30em
    width             100%
  .Venue__link
    z-index           300     // layer 3
    position          absolute
    top               0
    left              0
    display           block
    width             100%
    height            30em
    text-decoration   none
  .Venu__description
    z-index           400     // layer 4
    position          absolute
    top               3em
    left              3em
    display           block
    font-size         2em
    font-weight       900
    text-decoration   none
    padding           0.1em
    span
      display         inline-block
      background      rgb(0, 0, 0) /* The Fallback */
      background      rgba(0, 0, 0, 0.75)
      color           configuration_white
      padding-left    15px
      padding-right   15px
      padding-top     7px
      padding-bottom  3px


/*-----------------------------------------------------------------------------
  SUBSCRIBE
-----------------------------------------------------------------------------*/
_background = configuration_green
_text = configuration_purple
.Subscribe
  z-index             100       // layer 1
  position            relative  // ANCHOR POSITION
  width               100%
  padding             3em
  overflow            hidden
  font-size           1.5em     // ANCHOR SIZE
  vertical-align      top
  background-color    _background   // @TODO: use variable
.Subscribe__box
  z-index             100     // layer 1
  display             block
  width               31em
  height              14em
  margin              0 auto
  padding-left        0.5em
  // background-color  yellow  // @TODO: DUMMY
  &::before
    content           "["
    display           inline-block
    color             _text      // @TODO: variable
    font-size         12em
    font-weight       900
  &::after
    content           "]"
    display           inline-block
    color             _text      // @TODO: variable
    font-size         12em
    font-weight       900
.Subscribe__content
  position            relative
  display             inline-block
  width               20em
  bottom              1.3em
  padding-left        0.38em
.Subscribe__description
  font-size           2em
  font-weight         900
  letter-spacing      0.02em
  color               _text       // @TODO: variable
  padding-left        1.4em
.Subscribe__input-email
  display             inline-block
  border              0.1em solid _text
  color               _text      // @TODO: variable
  background-color    _background    // @TODO: variable
  width               12em
  height              2em
  font-size           1em
  margin-top          0.4em
  padding-left        0.4em
  &::-webkit-input-placeholder /* WebKit browsers */
    color             configuration_white
  &:-moz-placeholder /* Mozilla Firefox 4 to 18 */
    color             configuration_white
    opacity           1
  &::-moz-placeholder /* Mozilla Firefox 19+ */
     color            configuration_white
     opacity          1
  &:-ms-input-placeholder /* Internet Explorer 10+ */
     color            configuration_white

.Subscribe__action-submit
  display             inline-block
  border              none
  color               _background      // @TODO: variable
  background-color    _text      // @TODO: variable
  width               7em
  height              2em
  font-size           1em
  margin-top          0.4em
/*-----------------------------------------------------------------------------
  ABOUT
-----------------------------------------------------------------------------*/
_background = rgba(0,0,0,0.85)
_font_white = configuration_white
_font_purple = configuration_purple
.About
  font-size           3em    // ANCHOR SIZE
  .About__description
    margin 5em 0em 0em 0em
    padding 1em 0em .6em 0em
    background-color _background
    color _font_white
    letter-spacing 0.02em
    .About__description__name
      color _font_white
      padding-bottom .4em
      font-size 0.8em
      text-align center
      font-weight bold
    .About__description__address
      font-size .7em
      text-align center
      font-weight bold
    .About__description__allRightsReserved
      text-align center
      font-size 0.4em
      padding-bottom .2em
    .About__description__websiteDesign
      font-size 0.4em
      text-align center
  .About__links {
    width: 100%;
    height: 3em
    display: table;
    margin: 0;
  }
  .About__links a {
    display: table-cell;
    color: white;
    width: 14.2%;
    text-align: center;
    font-size: 2em;
    padding: .5em;
  }
  @media (max-width: 768px) {
    .About__links a {
      font-size: 1.5em;
    }
  }


