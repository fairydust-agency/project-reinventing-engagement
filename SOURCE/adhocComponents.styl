configuration_orange  = #FEA304
configuration_black   = #010D0B
configuration_purple  = #4B0B6C
configuration_green   = #C1EB14
configuration_white   = #FFEAE4

/*-----------------------------------------------------------------------------
  NAVIGATION
-----------------------------------------------------------------------------*/
_background = configuration_black
_text       = configuration_purple
.Navigation
  z-index           100 // layer 1
  background-color  _background
  font-size         2em
  font-weight       900
  letter-spacing    0.2em
  text-align        center
  padding-top       0.6em
  padding-bottom    0.65em
  a
    background-color _text
    color           _background
    text-decoration none
    padding-left 0.2em
    padding-right 0.2em


/*-----------------------------------------------------------------------------
  PITCHBOX
-----------------------------------------------------------------------------*/
_background = configuration_black
_text       = configuration_white
.Pitchbox
  height           40em
  img
    z-index          -1 // layer 0
    position fixed
    top 0

/*-----------------------------------------------------------------------------
  BUTTON
-----------------------------------------------------------------------------*/
.Button--VARIANT\\=Buy
  display           block
  background-color  green
  padding           1em
  form, input
    display         block
    margin          0 auto


/*-----------------------------------------------------------------------------
  COMPONENTGRID
-----------------------------------------------------------------------------*/
.Componentgrid
  position          relative
  display           block
  font-size         2em
  background-color  blue

.Componentgrid--VARIANT\\=Grid
  background-color  yellow

.Componentgrid--VARIANT\\=List
  background-color  purple


/*-----------------------------------------------------------------------------
  CARD
-----------------------------------------------------------------------------*/
.Card
  display           inline-block
  width             32%
  text-align        center


/*-----------------------------------------------------------------------------
  VENUE
-----------------------------------------------------------------------------*/
.Venue
  z-index           100       // layer 1
  position          relative  // ANCHOR POSITION
  background-color  none
  width             100%
  overflow          hidden
  font-size         20px      // ANCHOR SIZE
  vertical-align    top
  .Venue__map
    z-index           200     // layer 2
    display           block
    margin            0 auto
    height            30em
    width             100%
  .Venue__link
    z-index           300     // layer 3
    position          absolute
    top               0
    left              0
    display           block
    width             100%
    height            30em
    text-decoration   none
  .Venu__description
    z-index           400     // layer 4
    position          absolute
    top               3em
    left              3em
    display           block
    font-size         2em
    font-weight       900
    text-decoration   none
    padding           0.1em
    span
      display           inline-block
      background        rgb(0, 0, 0) /* The Fallback */
      background        rgba(0, 0, 0, 0.75)
      color             white
      padding-left      15px
      padding-right     15px
      padding-top       7px
      padding-bottom    3px
