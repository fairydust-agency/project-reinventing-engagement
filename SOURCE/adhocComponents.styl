    width             100%
    position          fixed
    top               0
  .Pitchbox__title1,
  // .Pitchbox__title2,
  .Pitchbox__title3,
  // .Pitchbox__moment,
  .Pitchbox__location
    position          absolute
    background-color  _background
    color             _text
    font-weight       900
    padding           1.5em
  .Pitchbox__title1
    top               1.6em
    left              17.6em
  .Pitchbox__title1a
    font-size         3.155em
  .Pitchbox__title2
    padding-top       0.2em
    font-size         2.155em
    text-align        center
  .Pitchbox__title3
    font-size         1.1em
    padding           0.2em
    text-transform    uppercase
    color             configuration_black
    background-color  rgba(255,255,255,0)
    top               15em
    left              56.2em
  .Pitchbox__moment
    text-transform    uppercase
    padding-top       1em
    font-size         1.5em
    letter-spacing    0.33em
  .Pitchbox__location
    font-size         1.5em
    top               12em
    left              40em
    padding            1em
