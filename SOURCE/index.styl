/*-----------------------------------------------------------------------------
  VENUE
-----------------------------------------------------------------------------*/
.Venue
  z-index           100       // layer 1
  position          relative  // ANCHOR POSITION
  background-color  none
  width             100%
  overflow          hidden
  font-size         20px      // ANCHOR SIZE
  vertical-align    top
  .Venue__map
    z-index           200     // layer 2
    display           block
    margin            0 auto
    height            30em
    width             100%
  .Venue__link
    z-index           300     // layer 3
    position          absolute
    top               0
    left              0
    display           block
    width             100%
    height            30em
    text-decoration   none
  .Venu__description
    z-index           400     // layer 4
    position          absolute
    top               3em
    left              3em
    display           block
    background        rgb(0, 0, 0) /* The Fallback */
    background        rgba(0, 0, 0, 0.75)
    color             white
    font-size         2em
    font-weight       900
    text-decoration   none
    padding           0.1em
    &:visited
      color             white
      text-decoration   none
    &:hover
      color             white
      text-decoration   none
    &:active
      color             white
      text-decoration   none
/*-----------------------------------------------------------------------------
